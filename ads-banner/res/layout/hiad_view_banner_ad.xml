<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/hiad_1_dp"
    android:minHeight="@dimen/hiad_1_dp">

    <com.huawei.openalliance.ad.views.AutoScaleSizeRelativeLayout
        android:id="@+id/hiad_banner_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.huawei.openalliance.ad.views.PPSNativeView
            android:id="@+id/hiad_banner_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">


            <ImageView
                android:id="@+id/hiad_banner_image_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"></ImageView>
        </com.huawei.openalliance.ad.views.PPSNativeView>

        <com.huawei.openalliance.ad.views.PPSNativeView
            android:id="@+id/hiad_banner_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/hiad_banner_image_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"></ImageView>
        </com.huawei.openalliance.ad.views.PPSNativeView>

        <ImageView
            android:id="@+id/hiad_banner_close_button"
            android:layout_width="@dimen/hiad_16_dp"
            android:layout_height="@dimen/hiad_16_dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/hiad_4_dp"
            android:layout_marginEnd="@dimen/hiad_4_dp"
            android:src="@drawable/hiad_banner_close_btn"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/hiad_ad_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hiad_12_dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/hiad_4_dp"
            android:layout_marginBottom="@dimen/hiad_4_dp"
            android:background="@drawable/hiad_bg_ad_label"
            android:gravity="center"
            android:paddingLeft="@dimen/hiad_6_dp"
            android:paddingTop="@dimen/hiad_1_dp"
            android:paddingRight="@dimen/hiad_6_dp"
            android:paddingBottom="@dimen/hiad_1_dp"
            android:singleLine="true"
            android:text="@string/hiad_ad_label_new"
            android:textColor="@color/hiad_emui_white"
            android:textSize="@dimen/hiad_7_dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/hiad_ad_source"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hiad_12_dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/hiad_3_dp"
            android:layout_marginBottom="@dimen/hiad_4_dp"
            android:layout_toEndOf="@+id/hiad_ad_label"
            android:background="@drawable/hiad_bg_ad_label"
            android:gravity="center"
            android:paddingLeft="@dimen/hiad_6_dp"
            android:paddingTop="@dimen/hiad_1_dp"
            android:paddingRight="@dimen/hiad_6_dp"
            android:paddingBottom="@dimen/hiad_1_dp"
            android:singleLine="true"
            android:textColor="@color/hiad_emui_white"
            android:textSize="@dimen/hiad_7_dp"
            android:visibility="gone" />

    </com.huawei.openalliance.ad.views.AutoScaleSizeRelativeLayout>
</FrameLayout>