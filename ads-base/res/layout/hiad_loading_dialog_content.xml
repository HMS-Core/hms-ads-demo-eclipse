<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/hiad_24_dp"
    android:paddingRight="@dimen/hiad_24_dp">

    <TextView
        android:id="@+id/hiad_loading_dialog_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:maxLines="2"
        android:text="@string/hiad_loading_tips"
        android:textSize="@dimen/hiad_text_18_sp" />

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/hiad_48_dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true" />
</RelativeLayout>