<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360">
    <shape
        android:shape="ring"
        android:thickness="2dp"
        android:useLevel="false">

        <gradient
            android:endColor="@color/hiad_video_buffer_progress_end"
            android:startColor="@color/hiad_video_buffer_progress_start"
            android:type="sweep"
            />
    </shape>
</rotate>