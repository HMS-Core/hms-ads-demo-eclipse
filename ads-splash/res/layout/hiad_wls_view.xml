<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.huawei.hms.ads.splash.ChoicesView
        android:id="@+id/splash_why_this_ad"
        android:layout_width="@dimen/hiad_24_dp"
        android:layout_height="@dimen/hiad_24_dp">
    </com.huawei.hms.ads.splash.ChoicesView>

    <com.huawei.openalliance.ad.views.PPSLabelView
        android:id="@+id/hiad_ad_label_wls"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hiad_bg_ad_label"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="1dp"
        android:singleLine="true"
        android:text="@string/hiad_ad_label_new"
        android:textColor="@color/hiad_font"
        android:textSize="@dimen/hiad_emui_master_caption_1"
        />

    <TextView
        android:id="@+id/hiad_ad_source_wls"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/hiad_margin_s"
        android:layout_marginLeft="@dimen/hiad_margin_s"
        android:layout_marginEnd="@dimen/hiad_margin_s"
        android:layout_marginRight="@dimen/hiad_margin_s"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="1dp"
        android:singleLine="true"
        android:textColor="@color/hiad_font"
        android:textSize="@dimen/hiad_emui_master_caption_1"
        android:shadowColor="@color/hiad_source_shadow_color"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        />
</merge>